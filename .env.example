# Email (only needed if you trigger password reset emails). For dev you can use a local SMTP server.
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Amadeus (flight search). Dummy values are fine for local run if you won’t use that feature.
AMADEUS_CLIENT_ID=dummy
AMADEUS_CLIENT_SECRET=dummy

# Google Maps API (used in templates/features). Dummy is okay if you won’t use maps.
GOOGLE_MAPS_API_KEY=dummy

# reCAPTCHA v3 — you can use Google’s public test keys for local development
# These test keys are accepted by many libraries for dev and won’t validate real users.
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=